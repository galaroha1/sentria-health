rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    // Check if user is logged in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get the user's role from their profile
    function getUserRole() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Check specific roles
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'Super Admin';
    }
    
    function isPharmacyManager() {
      return isAuthenticated() && getUserRole() == 'Pharmacy Manager';
    }

    function isInventorySpecialist() {
       return isAuthenticated() && getUserRole() == 'Inventory Specialist';
    }

    // --- Collection Rules ---

    // 1. Users: Users can read/write their own profile; Admins can manage all.
    match /users/{userId} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isSuperAdmin());
      
      // Simulation Sub-collection
      match /simulations/{simId} {
        allow read, write: if isAuthenticated() && (request.auth.uid == userId || isSuperAdmin());
      }
    }

    // 2. Sites: Read-only for most, Admin manages structure.
    match /sites/{siteId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // 3. Inventory: Critical Data.
    // Managers and Specialists can update. 
    // Validation: Quantity must never be negative.
    match /inventoryItems/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isPharmacyManager() || isInventorySpecialist();
      
      // Validation creates a barrier against bad data
      // (Note: This is a simplification; deep deep validation of JSON arrays in Firestore Security Rules is complex.
      // We rely on the App logic for the array structure, but we enforce Auth strongly here).
    }

    // 4. Transfer Requests
    // Anyone can create a request.
    match /transfers/{transferId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Anyone can request
      allow update: if isAuthenticated(); // Status updates
    }

    // 5. Notifications
    match /notifications/{notifId} {
       allow read, write: if isAuthenticated();
    }

    // 6. Audit Logs: IMMUTABLE TRACEABILITY
    // Create Only. No Updates. No Deletes.
    match /auditLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // <--- This guarantees the log is tamper-proof
    }
  }
}
