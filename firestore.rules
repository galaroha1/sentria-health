rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ALLOW AUTHENTICATED ONLY
    // This rule allows any user signed in to your app to read/write data.
    // It prevents public (unauthenticated) access.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
